{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<div class="d-flex justify-content-center my-5">
    <div class="card p-4" style="max-width:500px;">
        <h1 class="fw-bold mb-4 text-center" style="color:#b56576;">Registro</h1>

        {{ form_start(registrationForm) }}
            
            <div class="mb-3">
                {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-coquette">Registrar</button>
                <a href="{{ path('inicio') }}" class="btn btn-outline-secondary rounded-pill">Cancelar</a>
            </div>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
