{% extends 'base.html.twig' %}
{% block title %}Iniciar Sesión{% endblock %}
{% block body %}
<div class="d-flex justify-content-center my-5">
    <div class="card p-4" style="max-width:400px;">
        <h1 class="fw-bold mb-4 text-center" style="color:#b56576;">Iniciar Sesión</h1>

        {% if error %}
            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Email o usuario:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Contraseña:</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-coquette">Login</button>
                <a href="{{ path('inicio') }}" class="btn btn-outline-secondary rounded-pill">Cancelar</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
