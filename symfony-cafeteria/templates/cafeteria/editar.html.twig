{% extends 'base.html.twig' %}
{% block title %}Editar Cafetería{% endblock %}

{% block body %}
<div class="d-flex justify-content-center my-5">
    <div class="card p-4" style="max-width:500px;">
        <h1 class="fw-bold mb-4 text-center" style="color:#b56576;">Editar Cafetería</h1>

        {{ form_start(formulario, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="mb-3">
                {{ form_row(formulario.nombre, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(formulario.calle, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(formulario.telefono, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(formulario.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-coquette">Guardar</button>
                <a href="{{ path('inicio') }}" class="btn btn-outline-secondary rounded-pill">Cancelar</a>
            </div>
            
        {{ form_end(formulario) }}
    </div>
</div>
{% endblock %}
