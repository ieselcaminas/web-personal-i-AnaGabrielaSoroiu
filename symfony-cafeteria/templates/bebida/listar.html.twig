{% extends 'base.html.twig' %}
{% block title %}{{ cafeteria.nombre }}{% endblock %}
{% block body %}
<div class="text-center my-5">
    <h1 class="fw-bold mb-4" style="color:#b56576;">{{ cafeteria.nombre }}</h1>
    <h3 class="mb-4" style="color:#d46a8d;">Menú</h3>

    <div class="table-responsive mx-auto" style="max-width:800px;">
        <table class="table align-middle text-center bg-white rounded shadow-sm tabla-rosa">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Alergenos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for b in bebidas %}
                    <tr>
                        <td>{{ b.nombre }}</td>
                        <td>{{ b.tipo }}</td>
                        <td>{{ b.alergenos }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('editar_bebida', { codigo: b.id }) }}" class="btn btn-editar">Editar</a>
                                <!--Hago un return confirm para que pregunte al usuario si realmente
                                quiere eliminar esa bebida-->
                                <a href="{{ path('eliminar_bebida', { codigo: b.id }) }}" 
                                   onclick="return confirm('¿Estás segura de que deseas eliminar {{ b.nombre }}?');"
                                   class="btn btn-eliminar">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-muted">No se encuentra con un menú aún</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <h3 class="mt-5" style="color:#b56576;">¿Deseas realizar algún cambio?</h3>
    <a href="{{ path('nueva_bebida', { codigo : cafeteria.id }) }}" class="btn btn-coquette mt-3">Añadir bebida</a>

    <div class="mt-4">
        <a href="{{ path('inicio') }}" class="btn btn-outline-secondary rounded-pill">← Volver a las cafeterías</a>
    </div>
</div>
{% endblock %}
